{
    "compilerOptions": {
      "target": "es2015",    // Target ECMAScript 2015 (or later) for Promises support
      "module": "commonjs",  // Specify the module system you're using (e.g., CommonJS)
      "strict": true,        // Enable strict type checking
      "esModuleInterop": true, // Enable interoperability between CommonJS and ES modules
      "skipLibCheck": true,  // Skip type checking of declaration files
      "forceConsistentCasingInFileNames": true, // Enforce consistent file name casing
      "outDir": "./dist",     // Output directory for compiled files
      "rootDir": "./src",     // Root directory of your source code
      "removeComments": true, // Remove comments from the compiled JavaScript
      "sourceMap": true,     // Generate source maps for debugging
  
      "lib": ["es2015", "dom", "shifty"], // Libraries available in your project
  
      "strictNullChecks": true, // Enable strict null checks
      "noImplicitAny": true,    // Avoid the 'any' type where possible
      "noImplicitThis": true,   // Ensure 'this' is properly typed
      "alwaysStrict": true,     // Enable strict mode
    },
    "include": [
      "src/**/*.ts"  // Include TypeScript files in the 'src' directory
    ],
    "exclude": [
      "node_modules"  // Exclude the 'node_modules' directory
    ]
  }